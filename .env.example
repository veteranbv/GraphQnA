# Neo4j Connection
# Replace with your actual Neo4j Aura connection details
NEO4J_URI=neo4j+s://your-instance-id.databases.neo4j.io
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=your-password
NEO4J_DATABASE=neo4j

# OpenAI API
OPENAI_API_KEY=your-openai-api-key

# LLM Configuration
LLM_MODEL=gpt-4o
EMBEDDING_MODEL=text-embedding-3-large
LLM_TEMPERATURE=0.0
LLM_MAX_TOKENS=2000
EMBEDDING_DIMENSIONS=3072

# Chunking Configuration
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
VECTOR_TOP_K=5

# Logging Configuration
LOG_LEVEL=INFO

# Vector Index
VECTOR_INDEX_NAME=document-chunks

# API Configuration
GRAPHQNA_API_URL=http://localhost:8000

# Slack Bot Configuration
SLACK_BOT_TOKEN=xoxb-your-bot-token
SLACK_APP_TOKEN=xapp-your-app-token
SLACK_SIGNING_SECRET=your-signing-secret
SLACK_MONITORED_CHANNELS=general,ask_vivun
SLACK_ALWAYS_RESPOND_CHANNELS=ask_vivun